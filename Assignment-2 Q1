class InversionCount {
    public static void main(String[] args) {
        // Initialize an array of integers
        int arr[] = {30, 45, 25, 60, 20};
        // Get the length of the array
        int n = arr.length;        
        // Initialize a variable to count inversions
        int inversionCount = 0;
        // Outer loop to iterate through each element in the array
        for (int i = 0; i < n - 1; i++) {
            // Inner loop to compare the current element with the subsequent elements
            for (int j = i + 1; j < n; j++) {
                // Check if the current element is greater than the compared element
                if (arr[i] > arr[j]) {  
                    // If true, increment the inversion count
                    inversionCount++;
                }
            }
        }        
        // Print the total number of inversions found in the array
        System.out.println("The inversion count is " + inversionCount);
    }
}
